<!DOCTYPE html>
<html>
  <head>
    <title>Ffdw</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <header>
      <% if current_user %>
        <%= current_user.uid %>
      <% else  %>
        <%= link_to "Sign in", user_omniauth_authorize_path("lastfm") %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
